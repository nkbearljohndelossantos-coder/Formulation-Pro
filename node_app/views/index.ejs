<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulation Pro</title>
    <%- include('partials/styles') %>
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
        <style>
            /* Utility classes for Auth State toggling to avoid EJS linter errors in style attributes */
            .auth-flex {
                display: flex;
            }

            .auth-none {
                display: none;
            }

            .app-visible {
                display: block;
                opacity: 1;
            }

            .app-hidden {
                display: none;
                opacity: 0;
            }
        </style>
</head>


<body>

    <!-- Login Page Overlay -->
    <div class="login-page-bg <%= user ? 'auth-none' : 'auth-flex' %>" id="loginPage">

        <div class="wrapper">
            <div class="form-box login">
                <h2>Formulation Pro</h2>
                <div style="margin: 20px 0; text-align: center; color: #fff;">
                    <p>Secure Formulation Management System</p>
                </div>

                <div style="display: flex; justify-content: center; margin-top: 30px;">
                    <!-- Node.js Auth Link -->
                    <a href="/auth/google" class="btn-login"
                        style="text-decoration: none; line-height: 45px; display: block; text-align: center;">
                        <ion-icon name="logo-google"
                            style="margin-right: 10px; font-size: 1.2em; vertical-align: text-bottom;"></ion-icon>
                        Sign in with Google
                    </a>
                </div>

                <div
                    style="text-align: center; margin-top: 20px; padding-top: 20px; border-top: 1px solid rgba(255,255,255,0.2);">
                    <p style="color: rgba(255,255,255,0.7); font-size: 12px;">
                        <ion-icon name="shield-checkmark-outline" style="vertical-align: middle;"></ion-icon>
                        Secured by Node.js & Passport
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Application Content -->
    <!-- If user is logged in, show directly. Scripts will initialize data. -->
    <div id="mainApp" class="<%= user ? 'app-visible' : 'app-hidden' %>">

        <div class="app-container">
            <!-- =============== Navigation ================ -->
            <div class="navigation" id="navigation">
                <%- include('partials/navigation') %>
            </div>


            <!-- ========================= Main ==================== -->
            <div class="main" id="mainContent">
                <div class="topbar">
                    <div class="toggle" id="menuToggle">
                        <ion-icon name="menu-outline"></ion-icon>
                    </div>

                    <div class="topbar-right">
                        <div class="user-profile" id="userProfileBtn">
                            <div class="user-icon" id="topbarAvatar">
                                <ion-icon name="person-circle-outline"></ion-icon>
                            </div>

                            <!-- Profile Popover -->
                            <div class="profile-popover" id="profilePopover">
                                <div class="popover-header">
                                    <div class="popover-avatar" id="popoverAvatar">
                                        <ion-icon name="person-circle-outline"></ion-icon>
                                    </div>
                                    <div class="popover-name" id="popoverName">
                                        <%= user ? user.displayName : 'Guest User' %>
                                    </div>
                                    <div class="popover-email" id="popoverEmail">
                                        <%= user ? user.email : 'guest@example.com' %>
                                    </div>
                                    <div class="popover-role-badge" id="popoverRole">LOADING...</div>
                                </div>

                                <div class="popover-actions">
                                    <a href="#" class="popover-btn" onclick="openPage('settings'); closePopover();">
                                        <ion-icon name="settings-outline"></ion-icon> Settings
                                    </a>
                                    <a href="/logout" class="popover-btn logout">
                                        <ion-icon name="log-out-outline"></ion-icon> Sign out
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="clock-container">
                            <div class="time-display">
                                <span id="timeValue">00:00:00</span>
                                <span id="ampmValue" class="ampm">AM</span>
                            </div>
                            <div id="dateText" class="date-text">Loading Date...</div>
                            <input type="date" class="date-picker" id="datePicker" aria-label="Select date">
                        </div>
                    </div>
                </div>

                <!-- Main Content Area -->
                <main class="main-content-area">
                    <h1 class="page-title" id="pageTitle">Dashboard</h1>
                    <p class="welcome-message" id="welcomeMsg">Welcome to Formulation Manager</p>
                    <div id="dashboardContent" class="dashboard-content">
                        <!-- Dashboard content will be loaded here -->
                        <div style="text-align:center; padding:50px;">
                            <div class="spin"><ion-icon name="sync-outline" style="font-size:30px;"></ion-icon></div>
                            <p>Connecting to Node.js Backend...</p>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>

    <%- include('partials/google_shim') %>
        <%- include('partials/scripts') %>

            <!-- Init Logic for Logged In User -->
            <% if (user) { %>
                <script>
                    sessionStorage.setItem('isLoggedIn', 'true');
                    // Trigger initialization manually since we skipped the Login screen flow
                    document.addEventListener('DOMContentLoaded', function () {
                        // Small delay to ensure scripts are loaded
                        setTimeout(function () {
                            if (typeof initialize === 'function') {
                                initialize();
                                // Manually trigger dashboard load if needed, but initialize call usually does it
                                // BUT existing code calls handleLogin() which calls initialize().
                                // Here we call initialize() directly.
                                // We also need to hide the login page just in case css failed (redundant safety)
                                document.getElementById('loginPage').style.display = 'none';
                                document.getElementById('mainApp').style.display = 'block';
                                document.getElementById('mainApp').style.opacity = '1';
                                loadPage('dashboard');
                            }
                        }, 500);
                    });
                </script>
                <% } %>

                    <div id="security-watermark"></div>
</body>

</html>
